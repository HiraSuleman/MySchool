<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naviblue"
    tools:context=".SignUpActivity">
    <View
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="#800080"
        android:id="@+id/view"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/view"
        android:id="@+id/img_view"
        android:layout_marginTop="-64dp"
        android:src="@drawable/wave"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img_view"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-68dp"
        android:src="@drawable/logo"
        app:civ_border_color="#800080"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_view"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-48dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Get on Board"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/edit1"
        android:hint="Name"
        android:drawableLeft="@drawable/name"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@color/grey"
        android:background="@drawable/text_background"
        android:padding="9dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_below="@id/textview"
        android:layout_marginTop="43dp"
        />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/edit1"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="19dp"
        android:textColor="@android:color/white"
        android:background="@drawable/text_background"
        android:hint="Email"
        android:padding="9dp"
        android:textColorHint="@color/grey" />
    <EditText
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/lock"
        android:layout_below="@id/edit2"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="9dp"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:layout_marginRight="19dp"
        android:background="@drawable/text_background"
        android:hint="Password"
        android:padding="9dp"
        android:textColorHint="@color/grey" />
    <EditText
        android:id="@+id/edit4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/confirm"
        android:layout_below="@id/edit3"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="19dp"
        android:inputType="textPassword"
        android:background="@drawable/text_background"
        android:hint="Confirm Password"
        android:textColor="@android:color/white"
        android:padding="9dp"
        android:textColorHint="@color/grey" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/gender"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@id/edit4"
        android:layout_alignLeft="@id/edit4"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/radio1"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@id/gender"
        android:layout_alignLeft="@id/gender"


        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/radio2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@id/radio1"
        android:layout_alignLeft="@id/gender"


        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transgender"
        android:id="@+id/radio3"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@id/radio2"
        android:layout_alignLeft="@id/gender"


        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_below="@id/radio3"
        android:background="@drawable/button_background"
        android:text="Sign Up"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am already a member."
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:id="@+id/textview2"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"


        />


</RelativeLayout>